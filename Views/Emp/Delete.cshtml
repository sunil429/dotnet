@model Emp
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<div>
    <h4>Emp Details</h4>
    <hr />
    <d1 class="row">
        <dt class="col-sm-2">
            Empno
        </dt>
        <dd class="col-sm-10">
            @Model.Empno
        </dd>
        <dt class="col-sm-2">
            EmpName
        </dt>
        <dd class="col-sm-10">
            @Model.Ename
        </dd>
        <dt class="col-sm-2">
            Job
        </dt>
        <dd class="col-sm-10">
            @Model.Job
        </dd>
        <dt class="col-sm-2">
            HireDate
        </dt>
        <dd class="col-sm-10">
            @Model.Hiredate
        </dd>
    </d1>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Empno" />
        <input type="Submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
