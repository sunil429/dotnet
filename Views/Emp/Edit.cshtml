@model Emp
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

@section Scripts {
     @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            <div class="form-group">
                <label asp-for="Empno" class="control-label"></label>
                <input asp-for="Empno" class="form-control" readonly="readonly"/>
                <span asp-validation-for="Empno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ename" class="control-label"></label>
                <input asp-for="Ename" class="form-control"  />
                <span asp-validation-for="Ename" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job" class="control-label"></label>
                <input asp-for="Job" class="form-control" />
                <span asp-validation-for="Job" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hiredate" class="control-label"></label>
                <input asp-for="Hiredate" class="form-control"  />
                <span asp-validation-for="Hiredate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sal" class="control-label"></label>
                <input asp-for="Sal" class="form-control" />
                <span asp-validation-for="Sal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deptno" class="control-label"></label>
                <input asp-for="Deptno" class="form-control" />
                <span asp-validation-for="Deptno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>